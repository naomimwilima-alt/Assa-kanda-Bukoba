<script>
// Storage
let announcements=[], developmentReports=[], members=[], mediaFiles=[], docsFiles=[];

// Admin login
const ADMIN_USERNAME="Yusufu";
const ADMIN_PASSWORD="20252026";

function login(){
    const user=document.getElementById("username").value.trim();
    const pass=document.getElementById("password").value.trim();
    if(user===ADMIN_USERNAME && pass===ADMIN_PASSWORD){
        document.getElementById("loginBox").style.display="none";
        document.getElementById("publicPage").style.display="none";
        document.getElementById("adminPanel").style.display="block";
        document.getElementById("loginError").innerText="";
    } else {
        document.getElementById("loginError").innerText="Username au password si sahihi!";
    }
}

function logout(){
    document.getElementById("adminPanel").style.display="none";
    document.getElementById("publicPage").style.display="block";
    document.getElementById("loginBox").style.display="block";
}

function showPublic(){ document.getElementById("publicPage").style.display="block"; document.getElementById("loginBox").style.display="none"; document.getElementById("adminPanel").style.display="none"; }
function showLogin(){ document.getElementById("loginBox").style.display="block"; document.getElementById("publicPage").style.display="none"; document.getElementById("adminPanel").style.display="none"; }

// Posts
function postAnnouncement(){ const text=document.getElementById("newAnnouncement").value.trim(); if(text!==""){ announcements.push(text); renderAnnouncements(); document.getElementById("newAnnouncement").value=""; } }
function renderAnnouncements(){ document.getElementById("announcements").innerHTML=announcements.map(a=>`<p>• ${a}</p>`).join(""); }

function postDevelopment(){ const text=document.getElementById("newDevelopment").value.trim(); if(text!==""){ developmentReports.push(text); renderDevelopment(); document.getElementById("newDevelopment").value=""; } }
function renderDevelopment(){ document.getElementById("development").innerHTML=developmentReports.map(a=>`<p>• ${a}</p>`).join(""); }

function addMember(){ const name=document.getElementById("newMember").value.trim(); if(name!==""){ members.push(name); renderMembers(); document.getElementById("newMember").value=""; } }
function renderMembers(){ document.getElementById("membersList").innerHTML=members.map(m=>`<li>${m}</li>`).join(""); }

// Media & Docs
function addMedia(){ const file=document.getElementById("mediaInput").files[0]; if(file){ mediaFiles.push(file); renderMedia(); document.getElementById("mediaInput").value=""; } }
function renderMedia(){ const container=document.getElementById("mediaFiles"); container.innerHTML=""; mediaFiles.forEach(f=>{ if(f.type.startsWith("image/")){ const img=document.createElement("img"); img.src=URL.createObjectURL(f); container.appendChild(img); } else if(f.type.startsWith("video/")){ const vid=document.createElement("video"); vid.src=URL.createObjectURL(f); vid.controls=true; container.appendChild(vid); } }); }

function addDoc(){ const file=document.getElementById("docInput").files[0]; if(file){ docsFiles.push(file); renderDocs(); document.getElementById("docInput").value=""; } }
function renderDocs(){ const container=document.getElementById("docsFiles"); container.innerHTML=""; docsFiles.forEach(f=>{ const p=document.createElement("p"); p.innerText=f.name; container.appendChild(p); }); }

showPublic();
</script>

